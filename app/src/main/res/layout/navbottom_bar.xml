<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11sp"
    android:gravity="bottom"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:orientation="vertical">
        <TextView
            android:id="@+id/NBhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray3"
            android:textSize="23sp"
            android:text="@string/iconhome"
            />
        <TextView
            android:id="@+id/NBhomeT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/gray3"

            android:fontFamily="@font/mukta"
            android:textSize="13sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NBTransaksi"
            android:gravity="center"
            android:textColor="@color/gray3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="@string/icontransaksi"
            />
        <TextView
            android:id="@+id/NBTransaksiT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textColor="@color/gray3"
            android:fontFamily="@font/mukta"
            android:textSize="13sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/NBchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:textSize="23sp"
            android:text="@string/iconchat"
            />
        <TextView
            android:id="@+id/NBchatT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textColor="@color/gray3"
            android:fontFamily="@font/mukta"
            android:textSize="13sp"
            />

    </LinearLayout>

</LinearLayout>