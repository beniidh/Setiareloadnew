<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="18dp"
    tools:context=".CetakStruk.DetailTransaksiTruk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/notoregular"
            android:text="Pembelian Berhasil"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/notoregular"
            android:text="Rp.11.0000"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-35dp"
            android:elevation="5dp"
            android:padding="10sp"
            app:cardCornerRadius="35sp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/iconaxis" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:id="@+id/titlestruk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notoregular"
                android:text="Axis"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Nomor HP"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idNomorStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="085788387939"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/mukta"
                    android:text="Produk"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idProdukStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Pulsa Axis 10.000"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Saldoku Terpakai"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idSaldokuStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="Rp.11.000"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Tanggal"
                    android:textSize="16sp"
             />

                <TextView
                    android:id="@+id/idTanggalStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="21 May 2021"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Waktu"
                    android:textSize="16sp"
                   />

                <TextView
                    android:id="@+id/idWaktuStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="18:35"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Nomor SN"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idNomorSNStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                    android:text="0887765442567899" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Nomor Transaksi"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idNomorTransaksiStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   android:layout_alignParentEnd="true"
                    android:text="TRX7765442567899" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:textColor="@color/black"
                    android:text="Total Pembelian"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:id="@+id/idTotalPembelianStruk"
                    android:layout_alignParentRight="true"
                    android:text="Rp.11.000"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/mukta"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/idStatusStruk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="Success"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/setHargaJual"
                android:layout_width="0dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login3"
                android:layout_height="36dp"
                android:text="Set Harga Jual"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/cetakPDF"
                android:layout_width="0dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login2"
                android:layout_height="36dp"
                android:text="Cetak"
                android:textColor="@color/white"
                android:textAllCaps="false"/>





        </LinearLayout>

    </LinearLayout>


</ScrollView>