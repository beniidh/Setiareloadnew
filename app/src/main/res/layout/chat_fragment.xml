<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragment.ChatFragment">

  <com.airbnb.lottie.LottieAnimationView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      app:lottie_url="https://assets4.lottiefiles.com/packages/lf20_qo07xg45.json"
      app:lottie_loop="true"
      app:lottie_autoPlay="true"
      android:layout_marginBottom="20dp"
      />


        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Service (WhatsApp Chat)"
                    android:fontFamily="@font/poppins"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="+62 856-5555-5587"
                    android:textStyle="bold"
                    android:fontFamily="@font/notoregular"
                    />

                <Button
                    android:id="@+id/WaCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_login2"
                    android:text="Hubungi"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_gravity="right"

                    />


            </LinearLayout>

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="2dp"
            android:visibility="gone"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/teleGramCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:src="@drawable/telegram" />
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>




</LinearLayout>