<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SaldoServer.AjukanLimit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:text="Pengajuan Limit"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_saldo"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Isi pengajuan Limit"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/idPengajuanLimitServerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/nominal_diatas_adalah_nominal_untuk_pengajuan_limit_baru"
            android:textAlignment="center"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/idAjukanLimitServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_button_login2"
        android:text="Ajukan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>